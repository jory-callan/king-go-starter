    "version": "0.2.0",
    "configurations": [
        // debug, need to start manually
        {
            "name": "Debug My App",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go", // 如果 main 在根目录
            "args": [
                // "--mode=debug" // 这里填入你的启动参数
            ],
            "env": {},
            "showLog": true
        },
        // hot reload, no need to start, use dlv attach to running process
        {
            "name": "Attach to Air (热重载)",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "remotePath": "${workspaceFolder}",
            "port": 8080,
            "host": "127.0.0.1",
            "showLog": true
        }
    ]
}